<script>

    $(document).ready(function(){
        $('#search-input').on('input',function(){
            console.log("in method");
            var query=$(this).val();
            $.ajax({
                url: 'users/live_search',
                method: 'GET',
                data: {query: query},
                success: function(data){
                    $("#search_result").html(data);
                }
            });
        });
    });

